<UserControl
	x:Class="x360ce.App.Controls.PadItem_GeneralControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:conv="clr-namespace:x360ce.App.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:x360ce.App.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Name="This"
	d:Height="600"
	d:Width="1000"
	Loaded="UserControl_Loaded"
	Unloaded="UserControl_Unloaded"
	mc:Ignorable="d">

	<UserControl.Resources>
		<ResourceDictionary>
			<!--  MergedDictionaries  -->
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary>
                    <!--  Drag and Drop menu GroupBox  -->
					<Style
						x:Key="DragAndDropGroupBox"
						BasedOn="{StaticResource GroupBox_Default}"
						TargetType="GroupBox">
						<Setter Property="Margin" Value="0,-1,0,0" />
						<Setter Property="Padding" Value="5,0,2,3" />
					</Style>
					<!--  Drag and Drop menu Input Label  -->
					<Style x:Key="DragAndDropDInputLabel" TargetType="Label">
						<Setter Property="HorizontalAlignment" Value="Center" />
						<Setter Property="IsHitTestVisible" Value="False" />
						<Setter Property="Content" Value="STEP 3 - Drag and drop labels into text boxes." />
					</Style>
					<Style x:Key="DragAndDropXInputBorder" TargetType="Border">
						<Setter Property="Margin" Value="0,2,0,0" />
						<Setter Property="HorizontalAlignment" Value="Center" />
						<Setter Property="VerticalAlignment" Value="Top" />
						<Setter Property="IsHitTestVisible" Value="False" />
						<Setter Property="CornerRadius" Value="5" />
						<Setter Property="Background" Value="{StaticResource BackgroundDark}" />
					</Style>
					<Style x:Key="DragAndDropXInputLabel" TargetType="Label">
						<Setter Property="HorizontalAlignment" Value="Center" />
						<Setter Property="Padding" Value="7,2,8,3" />
						<Setter Property="IsHitTestVisible" Value="False" />
						<Setter Property="Content" Value="Input Status" />
					</Style>
					<!--  Drag and Drop menu Title Label  -->
					<Style x:Key="DragAndDropDInputTitleLabel" TargetType="Label">
						<Setter Property="Margin" Value="0" />
						<Setter Property="Padding" Value="0" />
						<Setter Property="HorizontalAlignment" Value="Center" />
						<Setter Property="Opacity" Value="0.3" />
						<Setter Property="IsHitTestVisible" Value="False" />
						<Setter Property="Content" Value="Drag and Drop Menu" />
						<Setter Property="Visibility" Value="Collapsed" />
					</Style>
					<!--  Drag and Drop menu "Loading..." Label  -->
					<Style x:Key="DragAndDropLoadingLabel" TargetType="Label">
						<Setter Property="Margin" Value="0,20,0,20" />
						<Setter Property="Padding" Value="9,3,9,6" />
						<Setter Property="HorizontalAlignment" Value="Center" />
						<Setter Property="IsHitTestVisible" Value="False" />
						<Setter Property="Content" Value="Loading..." />
					</Style>
					<!--  Drag and Drop menu Label  -->
					<Style x:Key="DragAndDropLabel" TargetType="Label">
						<Setter Property="IsHitTestVisible" Value="True" />
						<Setter Property="Background" Value="{StaticResource BackgroundDark}" />
						<Setter Property="Padding" Value="5,3,5,3" />
						<Setter Property="Margin" Value="0,0,3,3" />
						<Setter Property="Template">
							<Setter.Value>
								<ControlTemplate TargetType="Label">
									<Border
										Name="MouseOverBorder"
										Background="{StaticResource BackgroundDark}"
										CornerRadius="5">
										<Border
											Padding="{TemplateBinding Padding}"
											Background="{TemplateBinding Background}"
											CornerRadius="5">
											<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
										</Border>
									</Border>
									<ControlTemplate.Triggers>
										<Trigger Property="IsMouseOver" Value="True">
											<Setter TargetName="MouseOverBorder" Property="Background" Value="{StaticResource BackgroundDarkSelected}" />
										</Trigger>
									</ControlTemplate.Triggers>
								</ControlTemplate>
							</Setter.Value>
						</Setter>
					</Style>
					<!--  StackPanel  -->
					<Style x:Key="MiniMenuStackPanelLeft" TargetType="StackPanel">
                        <Setter Property="Margin" Value="0,0,0,0" />
                        <Setter Property="Orientation" Value="Horizontal" />
						<Setter Property="HorizontalAlignment" Value="Left" />
						<Setter Property="Background" Value="Transparent" />
						<Setter Property="IsHitTestVisible" Value="True" />
						<EventSetter Event="MouseEnter" Handler="MiniMenu_MouseEnterStackPanel" />
						<EventSetter Event="MouseLeave" Handler="MiniMenu_MouseLeaveStackPanel" />
						<!--  StackPanel (Name and XI value)  -->
						<Style.Resources>
							<Style TargetType="StackPanel">
								<Setter Property="VerticalAlignment" Value="Center" />
								<Style.Resources>
									<Style TargetType="Label">
										<Setter Property="Padding" Value="0,0,0,0" />
										<Setter Property="Margin" Value="2,0,2,0" />
									</Style>
								</Style.Resources>
							</Style>
						</Style.Resources>
					</Style>
					<Style
						x:Key="MiniMenuStackPanelRight"
						BasedOn="{StaticResource MiniMenuStackPanelLeft}"
						TargetType="StackPanel">
						<Setter Property="HorizontalAlignment" Value="Right" />
					</Style>
					<!--  XInput value Label  -->
					<Style x:Key="ValuesLeftLabel" TargetType="Label">
						<Setter Property="HorizontalAlignment" Value="Left" />
						<Setter Property="Foreground" Value="Green" />
						<Setter Property="Padding" Value="0" />
						<Setter Property="FontSize" Value="8" />
						<Setter Property="Content" Value="0" />
						<Setter Property="Margin" Value="3,-1,3,0" />
                        <Setter Property="Opacity" Value="0.8" />
					</Style>
					<Style
						x:Key="ValuesRightLabel" TargetType="Label" BasedOn="{StaticResource ValuesLeftLabel}">
						<Setter Property="HorizontalAlignment" Value="Right" />
					</Style>
                    <!--Button-->
                    <Style x:Key="MenuButtonLeft" TargetType="Button" BasedOn="{StaticResource Button_Default}">
                        <Setter Property="Margin" Value="0,0,3,0" />
                        <Setter Property="IsEnabled" Value="False" />
                        <Setter Property="Content" Value="{x:Null}" />
                        <Setter Property="Width" Value="26" />
                        <Setter Property="Height" Value="26" />
                        <Setter Property="Visibility" Value="Collapsed" />
                    </Style>
                    <Style x:Key="MenuButtonRight" TargetType="Button" BasedOn="{StaticResource MenuButtonLeft}">
                        <Setter Property="Margin" Value="3,0,0,0" />
                    </Style>

                    <!--Label Borders-->
                    <Style
						x:Key="LabelBorderLeft"
						TargetType="Border">
						<Setter Property="Background" Value="{StaticResource BackgroundLight}" />
                        <Setter Property="Padding" Value="0,0,5,0" />
                        <Setter Property="CornerRadius" Value="0,8,8,0" />
                    </Style>
                    <Style x:Key="LabelBorderRight" TargetType="Border">
                        <Setter Property="Background" Value="{StaticResource BackgroundLight}" />
                        <Setter Property="Padding" Value="5,0,0,0" />
                        <Setter Property="CornerRadius" Value="8,0,0,8" />
                    </Style>


                    <!--  TextBox  -->
					<Style BasedOn="{StaticResource TextBox_Default}" TargetType="TextBox">
						<Setter Property="Width" Value="75" />
						<Setter Property="AllowDrop" Value="True" />
						<EventSetter Event="PreviewDrop" Handler="DragAndDropMenu_Target_Drop" />
						<EventSetter Event="MouseEnter" Handler="MiniMenu_MouseEnterTextBox" />
                        <EventSetter Event="TextChanged" Handler="XInputTextBox_TextChanged" />
					</Style>
				</ResourceDictionary>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
    <Grid Margin="3" ClipToBounds="False">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
        <Border Grid.Column="2" Style="{StaticResource DragAndDropXInputBorder}">
            <Label Style="{StaticResource DragAndDropXInputLabel}" Content="Virtual Xbox 360 Controller" />
        </Border>

		<!--  Buttons and Axes  -->
		<Grid Grid.RowSpan="3">

            <TabControl Width="260" Margin="0,0,3,0">
				<TabItem>
					<TabItem.Header>
						<StackPanel Orientation="Horizontal">
							<ContentControl
								Name="NormalTab"
								Margin="0,0,3,0"
								Content="{StaticResource Icon_gamepad}" />
                            <TextBlock Text="INPUT" />
                        </StackPanel>
					</TabItem.Header>
					<ScrollViewer VerticalScrollBarVisibility="Auto">
						<StackPanel>
							<Label Style="{StaticResource DragAndDropDInputTitleLabel}" />

                            <!--  Drag and Drop Help  -->
							<Border Margin="3,3,3,0" Style="{StaticResource BorderDescriptionNormal}">
								<Label
									Padding="3,3,3,4"
									HorizontalAlignment="Center"
									Style="{StaticResource DragAndDropDInputLabel}" />
							</Border>

                            <Border Visibility="Collapsed" Name="InputMethodStatusBorder" Style="{StaticResource DragAndDropXInputBorder}" HorizontalAlignment="Stretch" Margin="3,3,3,0">
                                <Label Name="InputMethodStatusLabel" Style="{StaticResource DragAndDropXInputLabel}" Padding="3,3,3,4"/>
                            </Border>

                            <StackPanel Name="DragAndDropStackPanel" Margin="3,0,3,3">
								<StackPanel.Resources>
									<Style BasedOn="{StaticResource DragAndDropGroupBox}" TargetType="GroupBox" />
									<Style BasedOn="{StaticResource DragAndDropLabel}" TargetType="Label" />
								</StackPanel.Resources>
								<Label Style="{StaticResource DragAndDropLoadingLabel}" />
							</StackPanel>
						</StackPanel>
					</ScrollViewer>
				</TabItem>
			</TabControl>
		</Grid>

		<!--  Image  -->
		<Viewbox
			Grid.Column="1"
			Width="Auto"
			Height="400"
			Margin="0,30,0,0">
			<local:PadItem_General_XboxImageControl x:Name="XboxImage" VerticalAlignment="Top" />
		</Viewbox>

		<!--  LEFT  -->
		<StackPanel Grid.Column="1">
			<!--  LeftTrigger  -->
			<StackPanel Style="{StaticResource MiniMenuStackPanelLeft}">
				<TextBox Name="TriggerLTextBox" x:FieldModifier="public"/>
				<Button Name="TriggerLInvertButton" Style="{StaticResource MenuButtonLeft}" />

				<!-- Axis and Button value modification, Record, and Clear buttons -->
				<StackPanel
					Name="MiniMenuStackPanel"
					d:Visibility="Visible"
					Background="{StaticResource BackgroundLight}"
					Orientation="Horizontal"
					Visibility="Collapsed">
                    <!-- Button value modification buttons. -->
					<Button
						Name="DragAndDrop_Button"
						Margin="0,3,3,3"
						Click="ModifyButton_Click"
						ToolTip="Normal">
						<ContentControl Content="{StaticResource Icon_DragAndDrop_Button}" />
					</Button>
					<Button
						Name="DragAndDrop_Button_Inverted"
						Margin="0,3,3,3"
						Click="ModifyButton_Click"
						ToolTip="Inverted">
						<ContentControl Content="{StaticResource Icon_DragAndDrop_Button_Inverted}" />
					</Button>
					<!-- Axis value modification buttons. -->
					<Button
						Name="DragAndDrop_Axis"
						Margin="0,3,3,3"
						Click="ModifyButton_Click"
						ToolTip="Normal">
						<ContentControl Content="{StaticResource Icon_DragAndDrop_Axis}" />
					</Button>
					<Button
						Name="DragAndDrop_Axis_Inverted"
						Margin="0,3,3,3"
						Click="ModifyButton_Click"
						ToolTip="Inverted">
						<ContentControl Content="{StaticResource Icon_DragAndDrop_Axis_Inverted}" />
					</Button>
					<Button
						Name="DragAndDrop_Axis_Half"
						Margin="0,3,3,3"
						Click="ModifyButton_Click"
						ToolTip="Half">
						<ContentControl Content="{StaticResource Icon_DragAndDrop_Axis_Half}" />
					</Button>
					<Button
						Name="DragAndDrop_Axis_Inverted_Half"
						Margin="0,3,3,3"
						Click="ModifyButton_Click"
						ToolTip="Inverted Half">
						<ContentControl Content="{StaticResource Icon_DragAndDrop_Axis_Half_Inverted}" />
					</Button>
					<!--Record button-->
					<Button
						Name="RecordButton"
						Margin="0,3,3,3"
						Click="RecordButton_Click"
						ToolTip="Record">
						<!--<ContentControl Content="{StaticResource Icon_Record}" />-->
						<Border
							Width="14"
							Height="14"
							Margin="1"
							Background="{StaticResource ColorRecord}"
							CornerRadius="8" />
					</Button>
					<!--Clear button-->
					<Button
						Name="ClearButton"
						Margin="0,3,3,3"
						Click="ClearButton_Click"
						ToolTip="Clear">
						<ContentControl Content="{StaticResource Icon_broom}" />
					</Button>
				</StackPanel>

				<!--  Name and XInput Value Label  -->
				<Border Style="{StaticResource LabelBorderLeft}">
					<StackPanel>
						<Label Name="TriggerLLabel" Content="Trigger" />
						<Label Name="TriggerLXILabel" Style="{StaticResource ValuesLeftLabel}" />
					</StackPanel>
				</Border>
			</StackPanel>
			<!--  LeftShoulder  -->
			<StackPanel Style="{StaticResource MiniMenuStackPanelLeft}">
			             <TextBox Name="BumperLTextBox" x:FieldModifier="public" />
			             <Button Name="BumperLInvertButton" Style="{StaticResource MenuButtonLeft}"/>
			             <Border Style="{StaticResource LabelBorderLeft}">
                    <StackPanel>
                        <Label Name="BumperLLabel" Content="Bumper" />
                        <Label Name="BumperLXILabel" Style="{StaticResource ValuesLeftLabel}" />
                    </StackPanel>
                </Border>
            </StackPanel>
			<!--  ButtonBack  -->
			<StackPanel Margin="0,15,0,0" Style="{StaticResource MiniMenuStackPanelLeft}">
			             <TextBox Name="MenuBackTextBox" x:FieldModifier="public" />
			             <Button Name="MenuBackInvertButton" Style="{StaticResource MenuButtonLeft}" />
			             <Border Style="{StaticResource LabelBorderLeft}">
                    <StackPanel>
                        <Label Name="MenuBackLabel" Content="Back" />
                        <Label Name="MenuBackXILabel" Style="{StaticResource ValuesLeftLabel}" />
                    </StackPanel>
                </Border>
            </StackPanel>
			<!--  ButtonStart  -->
			<StackPanel Style="{StaticResource MiniMenuStackPanelLeft}">
			             <TextBox Name="MenuStartTextBox" x:FieldModifier="public" />
			             <Button Name="MenuStartInvertButton" Style="{StaticResource MenuButtonLeft}" />
			             <Border Style="{StaticResource LabelBorderLeft}">
                    <StackPanel>
                        <Label Name="MenuStartLabel" Content="Start" />
                        <Label Name="MenuStartXILabel" Style="{StaticResource ValuesLeftLabel}" />
                    </StackPanel>
                </Border>
            </StackPanel>
			<!--  ButtonGuide  -->
			<StackPanel Style="{StaticResource MiniMenuStackPanelLeft}">
			             <TextBox Name="MenuGuideTextBox" x:FieldModifier="public" />
			             <Button Name="MenuGuideInvertButton" Style="{StaticResource MenuButtonLeft}" />
			             <Border Style="{StaticResource LabelBorderLeft}">
                    <StackPanel>
                        <Label Name="MenuGuideLabel" Content="Guide" />
                        <Label Name="MenuGuideXILabel" Style="{StaticResource ValuesLeftLabel}" />
                    </StackPanel>
                </Border>
            </StackPanel>
			<!--  DPad  -->
			<StackPanel Style="{StaticResource MiniMenuStackPanelLeft}">
			             <TextBox Name="DPadTextBox" x:FieldModifier="public" />
			             <Button Name="DPadInvertButton" Style="{StaticResource MenuButtonLeft}"/>
			             <Border Style="{StaticResource LabelBorderLeft}">
                    <StackPanel>
                        <Label Name="DPadLabel" Content="D-Pad" />
                        <Label Name="DPadXILabel" Style="{StaticResource ValuesLeftLabel}" />
                    </StackPanel>
                </Border>
            </StackPanel>
			<!--  LeftThumbAxisX  -->
			<StackPanel Margin="0,20,0,0" Style="{StaticResource MiniMenuStackPanelLeft}">
			             <TextBox Name="StickLAxisXTextBox" x:FieldModifier="public" />
			             <Button Name="StickLAxisXInvertButton" Style="{StaticResource MenuButtonLeft}" />
			             <Border Style="{StaticResource LabelBorderLeft}">
                    <StackPanel>
                        <Label Name="StickLAxisXLabel" Content="Stick Axis X" />
                        <Label Name="StickLAxisXXILabel" Style="{StaticResource ValuesLeftLabel}" />
                    </StackPanel>
                </Border>
            </StackPanel>
			<!--  LeftThumbAxisY  -->
			<StackPanel Style="{StaticResource MiniMenuStackPanelLeft}">
			             <TextBox Name="StickLAxisYTextBox" x:FieldModifier="public" />
			             <Button Name="StickLAxisYInvertButton" Style="{StaticResource MenuButtonLeft}" />
			             <Border Style="{StaticResource LabelBorderLeft}">
                    <StackPanel>
                        <Label Name="StickLAxisYLabel" Content="Stick Axis Y" />
                        <Label Name="StickLAxisYXILabel" Style="{StaticResource ValuesLeftLabel}" />
                    </StackPanel>
                </Border>
            </StackPanel>
			<!--  LeftThumbButton  -->
			<StackPanel Style="{StaticResource MiniMenuStackPanelLeft}">
			             <TextBox Name="StickLButtonTextBox" x:FieldModifier="public" />
			             <Button Name="StickLButtonInvertButton" Style="{StaticResource MenuButtonLeft}" />
			             <Border Style="{StaticResource LabelBorderLeft}">
                    <StackPanel>
                        <Label Name="StickLButtonLabel" Content="Stick Button" />
                        <Label Name="StickLButtonXILabel" Style="{StaticResource ValuesLeftLabel}" />
                    </StackPanel>
                </Border>
            </StackPanel>
		</StackPanel>

		<!--  Stick Left  -->
        <StackPanel Grid.Row="2" Grid.Column="1">
			<!--  LeftThumbUp  -->
			<StackPanel Style="{StaticResource MiniMenuStackPanelLeft}">
			             <TextBox Name="StickLUpTextBox" x:FieldModifier="public" />
			             <Button Name="StickLUpInvertButton" Style="{StaticResource MenuButtonLeft}" />
			             <Border Style="{StaticResource LabelBorderLeft}">
                    <StackPanel>
                        <Label Name="StickLUpLabel" Content="Stick Up" />
                        <Label Name="StickLUpXILabel" Style="{StaticResource ValuesLeftLabel}" />
                    </StackPanel>
                </Border>
            </StackPanel>
			<!--  LeftThumbLeft  -->
			<StackPanel Style="{StaticResource MiniMenuStackPanelLeft}">
			             <TextBox Name="StickLLeftTextBox" x:FieldModifier="public" />
			             <Button Name="StickLLeftInvertButton" Style="{StaticResource MenuButtonLeft}" />
			             <Border Style="{StaticResource LabelBorderLeft}">
                    <StackPanel>
                        <Label Name="StickLLeftLabel" Content="Stick Left" />
                        <Label Name="StickLLeftXILabel" Style="{StaticResource ValuesLeftLabel}" />
                    </StackPanel>
                </Border>
            </StackPanel>
			<!--  LeftThumbRight  -->
			<StackPanel Style="{StaticResource MiniMenuStackPanelLeft}">
			             <TextBox Name="StickLRightTextBox" x:FieldModifier="public" />
                <Button Name="StickLRightInvertButton" Style="{StaticResource MenuButtonLeft}"/>
                <Border Style="{StaticResource LabelBorderLeft}">
                    <StackPanel>
                        <Label Name="StickLRightLabel" Content="Stick Right" />
                        <Label Name="StickLRightXILabel" Style="{StaticResource ValuesLeftLabel}" />
                    </StackPanel>
                </Border>
            </StackPanel>
			<!--  LeftThumbDown  -->
			<StackPanel Style="{StaticResource MiniMenuStackPanelLeft}">
			             <TextBox Name="StickLDownTextBox" x:FieldModifier="public" />
			             <Button Name="StickLDownInvertButton" Style="{StaticResource MenuButtonLeft}" />
			             <Border Style="{StaticResource LabelBorderLeft}">
                    <StackPanel>
                        <Label Name="StickLDownLabel" Content="Stick Down" />
                        <Label Name="StickLDownXILabel" Style="{StaticResource ValuesLeftLabel}" />
                    </StackPanel>
                </Border>
            </StackPanel>
		</StackPanel>

		<!--  DPad  -->
        <StackPanel
            ClipToBounds="False"
			Grid.Row="2"
			Grid.Column="1"
            Margin="300,0,0,0"
			Width="400"
			HorizontalAlignment="Left">
			<!--  DPadUp  -->
			<StackPanel Style="{StaticResource MiniMenuStackPanelLeft}">
			             <TextBox Name="DPadUpTextBox" x:FieldModifier="public" />
			             <Button Name="DPadUpInvertButton" Style="{StaticResource MenuButtonLeft}"/>
			             <Border Style="{StaticResource LabelBorderLeft}">
                    <StackPanel>
                        <Label Name="DPadUpLabel" Content="D-Pad Up" Width="70" />
                        <Label Name="DPadUpXILabel" Style="{StaticResource ValuesLeftLabel}" />
                    </StackPanel>
                </Border>
            </StackPanel>
			<!--  DPadLeft  -->
			<StackPanel Style="{StaticResource MiniMenuStackPanelLeft}">
			             <TextBox Name="DPadLeftTextBox" x:FieldModifier="public" />
			             <Button Name="DPadLeftInvertButton" Style="{StaticResource MenuButtonLeft}"/>
			             <Border Style="{StaticResource LabelBorderLeft}">
                    <StackPanel>
                        <Label Name="DPadLeftLabel" Content="D-Pad Left" Width="70" />
                        <Label Name="DPadLeftXILabel" Style="{StaticResource ValuesLeftLabel}" />
                    </StackPanel>
                </Border>
            </StackPanel>
			<!--  DPadRight  -->
			<StackPanel Style="{StaticResource MiniMenuStackPanelLeft}">
			             <TextBox Name="DPadRightTextBox" x:FieldModifier="public" />
			             <Button Name="DPadRightInvertButton" Style="{StaticResource MenuButtonLeft}"/>
			             <Border Style="{StaticResource LabelBorderLeft}">
                    <StackPanel>
                        <Label Name="DPadRightLabel" Content="D-Pad Right" Width="70" />
                        <Label Name="DPadRightXILabel" Style="{StaticResource ValuesLeftLabel}" />
                    </StackPanel>
                </Border>
            </StackPanel>
			<!--  DPadDown  -->
			<StackPanel Style="{StaticResource MiniMenuStackPanelLeft}">
			             <TextBox Name="DPadDownTextBox" x:FieldModifier="public" />
			             <Button Name="DPadDownInvertButton" Style="{StaticResource MenuButtonLeft}"/>
			             <Border Style="{StaticResource LabelBorderLeft}">
                    <StackPanel>
                        <Label Name="DPadDownLabel" Content="D-Pad Down" Width="70" />
                        <Label Name="DPadDownXILabel" Style="{StaticResource ValuesLeftLabel}" />
                    </StackPanel>
                </Border>
            </StackPanel>
		</StackPanel>

		<!--  RIGHT  -->
        <StackPanel Grid.Column="1">
			<!--  RightTrigger  -->
			<StackPanel Style="{StaticResource MiniMenuStackPanelRight}">
                <Border Style="{StaticResource LabelBorderRight}">
                    <StackPanel>
                        <Label Name="TriggerRLabel" Content="Trigger" />
                        <Label Name="TriggerRXILabel" Style="{StaticResource ValuesRightLabel}" />
                    </StackPanel>
                </Border>
                <Button Name="TriggerRInvertButton" Style="{StaticResource MenuButtonRight}"/>
                <TextBox Name="TriggerRTextBox" x:FieldModifier="public" />
   </StackPanel>
   <!--  RightShoulder  -->
			<StackPanel Style="{StaticResource MiniMenuStackPanelRight}">
                <Border Style="{StaticResource LabelBorderRight}">
                    <StackPanel>
                        <Label Name="BumperRLabel" Content="Bumper" />
                        <Label Name="BumperRXILabel" Style="{StaticResource ValuesRightLabel}" />
                    </StackPanel>
                </Border>
                <Button Name="BumperRInvertButton" Style="{StaticResource MenuButtonRight}"/>
                <TextBox Name="BumperRTextBox" x:FieldModifier="public" />
   </StackPanel>
   <!--  ButtonY  -->
			<StackPanel Margin="0,15,0,0" Style="{StaticResource MiniMenuStackPanelRight}">
                <Border Style="{StaticResource LabelBorderRight}">
                    <StackPanel>
                        <Label Name="ActionYLabel" Content="Y Button" />
                        <Label Name="ActionYXILabel" Style="{StaticResource ValuesRightLabel}" />
                    </StackPanel>
                </Border>
                <Button Name="ActionYInvertButton" Style="{StaticResource MenuButtonRight}"/>
                <TextBox Name="ActionYTextBox" x:FieldModifier="public" />
   </StackPanel>
   <!--  ButtonX  -->
			<StackPanel Style="{StaticResource MiniMenuStackPanelRight}">
                <Border Style="{StaticResource LabelBorderRight}">
                    <StackPanel>
                        <Label Name="ActionXLabel" Content="X Button" />
                        <Label Name="ActionXXILabel" Style="{StaticResource ValuesRightLabel}" />
                    </StackPanel>
                </Border>
                <Button Name="ActionXInvertButton" Style="{StaticResource MenuButtonRight}"/>
                <TextBox Name="ActionXTextBox" x:FieldModifier="public" />
   </StackPanel>
   <!--  ButtonB  -->
			<StackPanel Style="{StaticResource MiniMenuStackPanelRight}">
                <Border Style="{StaticResource LabelBorderRight}">
                    <StackPanel>
                        <Label Name="ActionBLabel" Content="B Button" />
                        <Label Name="ActionBXILabel" Style="{StaticResource ValuesRightLabel}" />
                    </StackPanel>
                </Border>
                <Button Name="ActionBInvertButton" Style="{StaticResource MenuButtonRight}"/>
                <TextBox Name="ActionBTextBox" x:FieldModifier="public" />
   </StackPanel>
   <!--  ButtonA  -->
			<StackPanel Style="{StaticResource MiniMenuStackPanelRight}">
                <Border Style="{StaticResource LabelBorderRight}">
                    <StackPanel>
                        <Label Name="ActionALabel" Content="A Button" />
                        <Label Name="ActionAXILabel" Style="{StaticResource ValuesRightLabel}" />
                    </StackPanel>
                </Border>
                <Button Name="ActionAInvertButton" Style="{StaticResource MenuButtonRight}"/>
                <TextBox Name="ActionATextBox" x:FieldModifier="public" />
   </StackPanel>
   <!--  RightThumbAxisX  -->
			<StackPanel Margin="0,20,0,0" Style="{StaticResource MiniMenuStackPanelRight}">
                <Border Style="{StaticResource LabelBorderRight}">
                    <StackPanel>
                        <Label Name="StickRAxisXLabel" Content="Stick Axis X" />
                        <Label Name="StickRAxisXXILabel" Style="{StaticResource ValuesRightLabel}" />
