<UserControl
    x:Class="x360ce.App.Controls.OptionsHidGuardianControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:x360ce.App.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="250"
    d:DesignWidth="800"
    Loaded="UserControl_Loaded"
    Unloaded="UserControl_Unloaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel>

            <!-- ViGEm Bus Help -->
            <Border Style="{StaticResource BorderDescriptionNormal}" Margin="3,3,3,0" Padding="6,3,3,4">
               <Label Content="Purpose of HidHide is to hide original controllers from games, so that only virtual controllers are visible. Install HidHide only if original controller prevents virtual controller functioning properly in the game." />
            </Border>

            <GroupBox Margin="3,3,3,0">
            <GroupBox.Header>
                <TextBlock Text="HidHide by Nefarius" />
            </GroupBox.Header>

                <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Content="Download" />
                        <TextBlock Grid.Column="1" Margin="3,0,0,0" VerticalAlignment="Center">
                        <Hyperlink NavigateUri="https://github.com/nefarius/HidHide/releases" TextDecorations="None" RequestNavigate="HyperLink_RequestNavigate">github.com/nefarius/HidHide/releases</Hyperlink>
                        </TextBlock>

                        <Button
                        Name="HidHideRefreshButton"
                        Grid.Column="3"
                        Width="60"
                        Click="HidHideRefreshButton_Click"
                        Content="Refresh" />
                        <Label Name="HidHideLabel" Grid.Row="1" Grid.Column="0">HidHide</Label>
                        <TextBox
                        Name="HidHideStatusTextBox"
                        Grid.Row="1"
                        Grid.Column="1"
                        IsReadOnly="True" />
                         <Button
                        Name="HidHideInstallButton"
                        Grid.Row="1"
                        Grid.Column="2"
                        Width="60"
                        Click="HidHideInstallButton_Click"
                        Content="Install"
                        IsEnabled="False" />
                        <Button
                        Name="HidHideUninstallButton"
                        Grid.Row="1"
                        Grid.Column="3"
                        Width="60"
                        Click="HidHideUninstallButton_Click"
                        Content="Uninstall"
                        IsEnabled="False" />
                    </Grid>

                <!--<RichTextBox Name="HidHideRichTextBox" Background="Transparent">
                <RichTextBox.Style>
                    <Style TargetType="RichTextBox" BasedOn="{StaticResource RichTextBox_Default}">
                        <Setter Property="LayoutTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="1" ScaleY="1" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </RichTextBox.Style>
            </RichTextBox>-->
        </GroupBox>
        
        </StackPanel>

        <GroupBox Grid.Row="1" Margin="3,3,3,0" Opacity="0.5">
            <GroupBox.Header>
                <TextBlock Text="HidGuardian by Nefarius · Discontinued" />
            </GroupBox.Header>
            <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <CheckBox
                    Name="HidGuardianConfigureAutomaticallyCheckBox"
                    Grid.Row="0"
                    Grid.Column="1"
                    Content="Configure automatically - auto-hide Direct Input device when emulated." />
                    <Button
                    Name="HidGuardianRefreshButton"
                    Grid.Row="0"
                    Grid.Column="3"
                    Width="60"
                    Click="HidGuardianRefreshButton_Click"
                    Content="Refresh" />
                    <Label Name="HidGuardianLabel" Grid.Row="1" Grid.Column="0">HidGuardian</Label>
                    <TextBox
                    Name="HidGuardianStatusTextBox"
                    Grid.Row="1"
                    Grid.Column="1"
                    IsReadOnly="True" />
                    <Button
                    Name="HidGuardianInstallButton"
                    Grid.Row="1"
                    Grid.Column="2"
                    Width="60"
                    Click="HidGuardianInstallButton_Click"
                    Content="Install"
                    IsEnabled="False" />
                    <Button
                    Name="HidGuardianUninstallButton"
                    Grid.Row="1"
                    Grid.Column="3"
                    Width="60"
                    Click="HidGuardianUninstallButton_Click"
                    Content="Uninstall"
                    IsEnabled="False" />
                </Grid>
                <RichTextBox Grid.Row="1" Name="HidGuardianRichTextBox" Background="Transparent">
                        <RichTextBox.Style>
                            <Style TargetType="RichTextBox" BasedOn="{StaticResource RichTextBox_Default}">
                                <Setter Property="LayoutTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1" />
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </RichTextBox.Style>
                    </RichTextBox>
            </StackPanel>
        </GroupBox>

    </Grid>
</UserControl>
